{{ template "base.tmpl" }}
<title>{{ .City.CityName }}</title>
</head>
<body>
{{ if eq .City.Status "Существует" }}
    <div class="city-card-body">
        <div class="card-container">
            <link rel="stylesheet" type="text/css" href="static/css/city_card.css">
            <span class="pro">Город</span>
            <img class="round" src="{{ .City.ImageURL }}" style="width: 150px; height: 150px; object-fit: cover;"
                 alt="user"/>
            <h3>{{ .City.CityName }}</h3>
            <h6>Статус: {{ .City.Status }} </h6>
            <p>{{ .City.Description }}</p>
            <form action="/cities" method="POST" style="position: absolute; top: 10px; right: 10px;">
                <input type="hidden" name="cityID" value="{{ .City.ID }}">
                <button class="primary" type="submit" style="background: transparent; border: none;">
                    <img src="/static/img/deleteTrash.png" alt="" style="width: 34px; height: 34px;">
                </button>
            </form>
            <div class="buttons">
                <button class="primary">
                    Следить
                </button>
                <button class="primary ghost">
                    Записаться
                </button>
            </div>
            <div class="skills">
                <h6>Смотреть также</h6>
                <ul>
                    {{ range .LookAlso }}
                        <li><a href="/cities?city={{ .ID }}">{{ .CityName }}</a></li>
                    {{ else }}
                        <li>Нет данных для отображения</li>
                    {{ end }}
                </ul>
            </div>
        </div>
    </div>
{{ else }}
    <h1 style="text-align: center;">Город удалён</h1>
{{ end }}
</body>
</html>