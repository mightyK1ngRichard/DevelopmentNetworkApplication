{{ template "base.tmpl" }}
{{ with index .Cities 0 }}
<title>{{ .CityName }}</title>
</head>
<body>
<div class="city-card-body">
    <div class="card-container">
        <link rel="stylesheet" type="text/css" href="static/css/city_card.css">
        <span class="pro">City</span>
        <img class="round" src="{{ .ImageURL }}" style="width: 150px; height: 150px; object-fit: cover;" alt="user"/>
        <h3>{{ .CityName }}</h3>
        <h6>Статус: {{ .Status }} </h6>
        <p>{{ .Description }}</p>
        {{ if eq .Status "существует" }}
        <form action="/cities" method="POST" style="position: absolute; top: 10px; right: 10px;">
            <input type="hidden" name="cityID" value="{{ .ID }}">
            <button class="primary" type="submit" style="background: transparent; border: none;">
                <img src="/static/img/deleteTrash.png" alt="" style="width: 34px; height: 34px;">
            </button>
        </form>
        {{ end }}
        <div class="buttons">
            <button class="primary">
                Придумать
            </button>
            <button class="primary ghost">
                Записаться
            </button>
        </div>
        {{ end }}

        <div class="skills">
            <h6>Смотреть также</h6>
            <ul>
                {{ range .LookAlso }}
                    {{ $city := . }}
                    <li><a href="/cities?city={{ $city.ID }}">{{ $city.CityName }}</a></li>
                {{ else }}
                    <li>Нет данных для отображения</li>
                {{ end }}
            </ul>
        </div>
    </div>
</div>
</body>
</html>
